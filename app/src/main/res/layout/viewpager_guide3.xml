<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/viewpager_guide2img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_eats"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/viewpager3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="本应用上线于腾讯应用宝，有什么意见或者建议欢迎你能联系我，让我们一起将这个APP做得更好。联系方式在【设置】-【关于】界面上能够找到。"
        android:layout_below="@id/viewpager_guide2img"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/guide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_button"
        android:text="开始体验"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp" />

</RelativeLayout>